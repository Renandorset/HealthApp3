@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to HealthApp";
}

<div class="min-h-screen bg-gradient-to-br from-blue-100 to-blue-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto space-y-12">
        <!-- Welcome Banner -->
        <div class="text-center">
            <h1 class="text-5xl font-bold text-blue-700 mb-4">Welcome to HealthApp</h1>
            <p class="text-gray-600 text-lg">A modern hospital management system for doctors, patients, and admins.</p>
        </div>

        <!-- Stats Section -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 text-center">
            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-3xl font-bold text-blue-600">120+</h2>
                <p class="text-gray-700 mt-2">Registered Patients</p>
            </div>
            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-3xl font-bold text-blue-600">25</h2>
                <p class="text-gray-700 mt-2">Active Doctors</p>
            </div>
            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-3xl font-bold text-blue-600">300+</h2>
                <p class="text-gray-700 mt-2">Appointments Booked</p>
            </div>
        </div>

        <!-- Role Navigation Section -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition">
                <h3 class="text-xl font-semibold text-blue-700 mb-2">Patients</h3>
                <p class="text-gray-600 mb-4">Book, view, and manage your medical appointments with ease.</p>
                <a asp-page="/PatientPages/PatientDashboard" class="text-blue-600 font-medium hover:underline">Go to Patient Dashboard</a>
            </div>
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition">
                <h3 class="text-xl font-semibold text-blue-700 mb-2">Doctors</h3>
                <p class="text-gray-600 mb-4">Manage appointments, view patient info, and issue prescriptions.</p>
                <a asp-page="/DoctorPages/ManageDoctorAppointments" class="text-blue-600 font-medium hover:underline">Go to Doctor Panel</a>
            </div>
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition">
                <h3 class="text-xl font-semibold text-blue-700 mb-2">Admins</h3>
                <p class="text-gray-600 mb-4">Oversee the system, assign roles, and manage resources.</p>
                <a asp-page="/AdminPages/Dashboard" class="text-blue-600 font-medium hover:underline">Go to Admin Dashboard</a>
            </div>
        </div>
    </div>
</div>
